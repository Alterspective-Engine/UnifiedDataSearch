{
    "comment": "Simple aspect widget configuration for single entity selection (Clean Architecture)",
    "widgetType": "Alt.UnifiedDataSearch.Widgets.UnifiedOdsEntityPicker",
    "configuration": {
        "_host": {
            "model": "@parent",
            "blade": "@blade",
            "enabled": "@enabled"
        },
        "label": "Primary Client",
        "placeholder": "Click to search for client...",
        "required": true,
        "allowMultiple": false,
        "allowClear": true,
        "allowInlineSearch": true,
        "mode": "select",
        "fieldName": "clientOdsId",
        "returnField": "odsId",
        "entityTypes": ["person", "organisation"],
        "searchMode": "odsOnly",
        "maxQuickResults": 5,
        "displayFields": ["email"],
        "showIcon": true,
        "showEmail": true,
        "showPhone": false,
        "showSourceBadge": false
    }
}