{
    "comment": "Aspect widget configuration for multiple participant selection (Clean Architecture)",
    "widgetType": "Alt.UnifiedDataSearch.Widgets.UnifiedOdsEntityPicker",
    "configuration": {
        "_host": {
            "model": "@parent",
            "blade": "@blade",
            "enabled": "@enabled"
        },
        "label": "Case Participants",
        "placeholder": "Add participants to this case...",
        "required": false,
        "allowMultiple": true,
        "allowClear": true,
        "allowInlineSearch": true,
        "mode": "auto",
        "fieldName": "participants",
        "returnField": "entity",
        "entityTypes": ["person", "organisation"],
        "searchMode": "odsOnly",
        "maxQuickResults": 10,
        "displayFields": ["email", "phone"],
        "sharedoId": "@workItemId",
        "sharedoTypeSystemName": "@workItemType",
        "forRoleSystemName": "participant",
        "addNewParticipantsToSharedoId": "@workItemId",
        "showIcon": true,
        "showEmail": true,
        "showPhone": true,
        "showSourceBadge": false
    }
}